<Window x:Class="ReadMore.WPF.CreateOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🛒 Nieuwe Bestelling"
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6"
        FontFamily="Segoe UI"
        FontSize="14">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Height="32" Margin="0,0,0,10">
            <Border Background="#F9FAFB" BorderBrush="#D1D5DB"
                    BorderThickness="1" CornerRadius="6"/>
            <TextBox x:Name="BooksSearchTextBox"
                     VerticalAlignment="Center"
                     Padding="6"
                     Background="Transparent"
                     BorderThickness="0"
                     TextChanged="BooksSearchTextBox_TextChanged"/>
            <TextBlock Text="Zoek een boek..."
                       Foreground="Gray"
                       IsHitTestVisible="False"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       x:Name="BooksPlaceholder"/>
        </Grid>

        <DataGrid x:Name="BooksDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  BorderBrush="#E5E7EB"
                  RowBackground="White"
                  AlternatingRowBackground="#F9FAFB">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Titel" Binding="{Binding Title}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Prijs (€)" Binding="{Binding Price}" IsReadOnly="True" Width="100"/>
                <DataGridTextColumn Header="Aantal" Binding="{Binding Quantity}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="Totaal: " VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
            <TextBlock x:Name="TotalTextBlock" Text="0.00" VerticalAlignment="Center" FontSize="14" Margin="5,0,20,0"/>
            <Button Content="Bestellen" Width="100" Margin="5,0,0,0" Background="#2B3A67" Foreground="White"
                    BorderThickness="0" Click="ConfirmOrderButton_Click"/>
            <Button Content="Annuleren" Width="100" Margin="5,0,0,0" Background="#E5E7EB" Foreground="#2B3A67"
                    BorderThickness="0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
