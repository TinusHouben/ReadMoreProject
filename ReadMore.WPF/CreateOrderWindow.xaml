<Window x:Class="ReadMore.WPF.CreateOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nieuwe Bestelling" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="BooksDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Titel" Binding="{Binding Title}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Prijs" Binding="{Binding Price}" IsReadOnly="True" Width="100"/>
                <DataGridTextColumn Header="Aantal" Binding="{Binding Quantity}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="Totaal: " VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
            <TextBlock x:Name="TotalTextBlock" Text="0.00" VerticalAlignment="Center" FontSize="14" Margin="5,0,20,0"/>
            <Button Content="Bestellen" Width="100" Margin="5,0,0,0" Click="ConfirmOrderButton_Click"/>
            <Button Content="Annuleren" Width="100" Margin="5,0,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
