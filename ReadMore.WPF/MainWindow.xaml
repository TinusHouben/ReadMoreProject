<Window x:Class="ReadMore.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReadMore - Boekenbeheer" Height="650" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid Background="#FAFAFA">
        <TabControl x:Name="MainTabControl" Margin="10">

            <!-- CATALOGUS TAB -->
            <TabItem Header="Catalogus">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Grid Width="350" Height="28" Margin="0,0,10,0">
                            <TextBox x:Name="CatalogusSearchTextBox" VerticalAlignment="Center"
                                     TextChanged="CatalogusSearchTextBox_TextChanged"/>
                            <TextBlock Text="Zoek een boek..." Foreground="Gray" IsHitTestVisible="False"
                                       Margin="6,0,0,0" VerticalAlignment="Center"
                                       x:Name="CatalogusPlaceholder" />
                        </Grid>

                        <Button x:Name="CreateOrderButton" Content="🛒 Nieuwe Bestelling" Width="160"
                                Click="CreateOrderButton_Click"/>
                        <Button Content="🚪 Logout" Width="100" Margin="10,0,0,0" Click="LogoutButton_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="CatalogusDataGrid" Grid.Row="1"
                              AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Titel" Binding="{Binding Title}" Width="*"/>
                            <DataGridTextColumn Header="Auteur" Binding="{Binding Author}" Width="200"/>
                            <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="150"/>
                            <DataGridTextColumn Header="Prijs (€)" Binding="{Binding Price}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ADMIN TAB -->
            <TabItem Header="Admin">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                        <Grid Width="350" Height="28" Margin="0,0,10,0">
                            <TextBox x:Name="AdminSearchTextBox" VerticalAlignment="Center"
                                     TextChanged="AdminSearchTextBox_TextChanged"/>
                            <TextBlock Text="Zoek boeken of bestellingen..." Foreground="Gray" IsHitTestVisible="False"
                                       Margin="6,0,0,0" VerticalAlignment="Center"
                                       x:Name="AdminPlaceholder" />
                        </Grid>

                        <Button Content="📘 Voeg Boek Toe" Width="130" Margin="0,0,8,0" Click="AddBookButton_Click"/>
                        <Button Content="✏️ Bewerk Boek" Width="130" Margin="0,0,8,0" Click="EditBookButton_Click"/>
                        <Button Content="❌ Verwijder Boek" Width="130" Margin="0,0,8,0" Click="DeleteBookButton_Click"/>
                        <Button Content="⟳ Vernieuw" Width="100" Margin="12,0,8,0" Click="RefreshOrdersButton_Click"/>
                        <Button Content="✓ Markeer als Verwerkt" Width="160" Click="MarkProcessedButton_Click"/>
                        <Button Content="🚪 Logout" Width="100" Margin="10,0,0,0" Click="LogoutButton_Click"/>
                    </StackPanel>

                    <GroupBox Header="Boeken (Admin)" Grid.Row="1" Margin="0,0,0,10">
                        <DataGrid x:Name="AdminBooksDataGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                                  IsReadOnly="True" SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                                <DataGridTextColumn Header="Titel" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="Auteur" Binding="{Binding Author}" Width="200"/>
                                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="150"/>
                                <DataGridTextColumn Header="Prijs (€)" Binding="{Binding Price}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <GroupBox Header="Bestellingen (Admin)" Grid.Row="2">
                        <DataGrid x:Name="AdminOrdersDataGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                                  IsReadOnly="False" SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                                <DataGridTextColumn Header="Gebruiker" Binding="{Binding UserName}" Width="150"/>
                                <DataGridTextColumn Header="Boeken" Binding="{Binding BookTitles}" Width="*"/>
                                <DataGridTextColumn Header="Totaal (€)" Binding="{Binding TotalPrice}" Width="100"/>
                                <DataGridCheckBoxColumn Header="Verwerkt" Binding="{Binding IsProcessed, Mode=TwoWay}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <TextBlock Grid.Row="3" Text="Selecteer een boek in de bovenste tabel om te bewerken/verwijderen." 
                               Foreground="Gray" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </Grid>
            </TabItem>

            <!-- BESTELLINGEN TAB -->
            <TabItem Header="Bestellingen">
                <DataGrid x:Name="OrdersDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                        <DataGridTextColumn Header="Gebruiker" Binding="{Binding UserName}" Width="150"/>
                        <DataGridTextColumn Header="Boeken" Binding="{Binding BookTitles}" Width="*"/>
                        <DataGridTextColumn Header="Totaalprijs (€)" Binding="{Binding TotalPrice}" Width="100"/>
                        <DataGridTextColumn Header="Datum" Binding="{Binding OrderDate}" Width="160"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
