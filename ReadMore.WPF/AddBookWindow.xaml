<Window x:Class="ReadMore.WPF.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Boek Toevoegen" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Titel:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="0" Margin="100,0,0,5"/>

        <TextBlock Text="Auteur:" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="AuthorTextBox" Grid.Row="1" Margin="100,0,0,5"/>

        <TextBlock Text="ISBN:" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox x:Name="IsbnTextBox" Grid.Row="2" Margin="100,0,0,5"/>

        <TextBlock Text="Prijs:" Grid.Row="3" VerticalAlignment="Center"/>
        <TextBox x:Name="PriceTextBox" Grid.Row="3" Margin="100,0,0,5"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Opslaan" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Content="Annuleren" Width="100" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
