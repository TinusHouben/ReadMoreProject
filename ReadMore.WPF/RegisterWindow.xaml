<Window x:Class="ReadMore.WPF.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registreren" Height="350" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Gebruikersnaam:"/>
            <TextBox x:Name="UsernameTextBox" />

            <TextBlock Text="Email:" Margin="0,10,0,0"/>
            <TextBox x:Name="EmailTextBox" />

            <TextBlock Text="Wachtwoord:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" />

            <TextBlock Text="Bevestig wachtwoord:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="ConfirmPasswordBox" />

            <Button Content="Registreren" Margin="0,20,0,0" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
