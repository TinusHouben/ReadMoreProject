<Window x:Class="ReadMore.WPF.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Winkelmandje" Height="500" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="SearchTextBox" Width="200" Height="25" 
                     VerticalAlignment="Center" 
                     TextChanged="SearchTextBox_TextChanged"/>
        </StackPanel>

        <DataGrid x:Name="CartDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Titel" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Auteur" Binding="{Binding Author}" Width="*"/>
                <DataGridTextColumn Header="Prijs" Binding="{Binding Price}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="Totaal: " VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBlock x:Name="TotalPriceText" VerticalAlignment="Center" Margin="5,0"/>
            <Button Content="Bestel" Margin="10,0,0,0" Click="PlaceOrderButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
