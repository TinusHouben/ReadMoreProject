<Window x:Class="ReadMore.WPF.EditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bewerk Boek" Height="300" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Titel:" Grid.Row="0"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="0" Margin="100,0,0,5"/>

        <TextBlock Text="Auteur:" Grid.Row="1"/>
        <TextBox x:Name="AuthorTextBox" Grid.Row="1" Margin="100,0,0,5"/>

        <TextBlock Text="ISBN:" Grid.Row="2"/>
        <TextBox x:Name="IsbnTextBox" Grid.Row="2" Margin="100,0,0,5"/>

        <TextBlock Text="Prijs:" Grid.Row="3"/>
        <TextBox x:Name="PriceTextBox" Grid.Row="3" Margin="100,0,0,5"/>

        <Button Content="Opslaan" Grid.Row="4" Width="100" Margin="0,5,260,5" Click="SaveButton_Click"/>
    </Grid>
</Window>
