<Window x:Class="ReadMore.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReadMore - Login"
        Height="450" Width="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F4F6"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#e8eefc" Offset="0"/>
                <GradientStop Color="#f7f9ff" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="White" CornerRadius="16"
                Width="300" Padding="30"
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="📚 ReadMore"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#2B3A67"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Welkom terug!"
                           FontSize="14"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Gebruikersnaam"
                           FontWeight="SemiBold"
                           Foreground="#2B3A67"
                           Margin="0,0,0,5"/>
                <Border CornerRadius="6" Background="#F9FAFB" BorderBrush="#D1D5DB" BorderThickness="1" Margin="0,0,0,15">
                    <TextBox Name="UsernameTextBox"
                             Height="35"
                             Padding="8"
                             Background="Transparent"
                             BorderThickness="0"/>
                </Border>

                <TextBlock Text="Wachtwoord"
                           FontWeight="SemiBold"
                           Foreground="#2B3A67"
                           Margin="0,0,0,5"/>
                <Border CornerRadius="6" Background="#F9FAFB" BorderBrush="#D1D5DB" BorderThickness="1">
                    <PasswordBox Name="PasswordBox"
                                 Height="35"
                                 Padding="8"
                                 Background="Transparent"
                                 BorderThickness="0"/>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0" >
                    <Button Content="Login"
                            Width="110" Height="35"
                            Margin="0,0,10,0"
                            Click="LoginButton_Click"
                            Background="#2B3A67"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>

                    <Button Content="Registreren"
                            Width="110" Height="35"
                            Click="RegisterButton_Click"
                            Background="#E5E7EB"
                            Foreground="#2B3A67"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
